{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "target": "ES2017",
      "module": "commonjs",
      "removeComments": false,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
  }
}